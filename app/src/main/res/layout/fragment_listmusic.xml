<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gradient"
    android:orientation="vertical"
    tools:context=".Fragments.listmusic">

    <com.nrg.radio.PageLoader
        android:id="@+id/pageloader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:setTextColor="@color/colorPrimary"
        app:setLoadingImage="@drawable/nrgradio"
        app:setLoadingText="WE ARE THE NRGIZERS"
        app:setLoadingImageWidth="68dp"
        app:setLoadingAnimationMode="shake"
        app:setLoadingImageHeight="68dp"
        app:setTextSize="14sp"
        app:setErrorImage="@drawable/ic_not_found"
       />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playlist"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>